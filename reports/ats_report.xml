<odoo>
    <template id="veterinariaupo_ats_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="ats">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure" />
                        <h2>ATS Report</h2>
                        <p><strong>ID ATS:</strong> <span t-field="ats.idATS" /></p>
                        <p><strong>Nombre:</strong> <span t-field="ats.nombre" /></p>
                        <p><strong>Apellidos:</strong> <span t-field="ats.apellidos" /></p>
                        <p><strong>DNI:</strong> <span t-field="ats.dni" /></p>
                        <p><strong>Dirección:</strong> <span t-field="ats.direccion" /></p>
                        <p><strong>Teléfono:</strong> <span t-field="ats.telefono" /></p>
                        <p><strong>Correo:</strong> <span t-field="ats.correo" /></p>
                        <p><strong>Especialidad:</strong> <span t-field="ats.especialidad" /></p>
                        
                        <div t-if="ats.prueba_medicas">
                            <h3>Pruebas Médicas</h3>
                            <table>
                                <thead>
                                    <tr>
                                        <th>Nombre de la Prueba</th>
                                        <th>Resultado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="ats.prueba_medicas" t-as="prueba">
                                        <tr>
                                            <td><span t-field="prueba.id_pruebamedica" /></td>
                                            <td><span t-field="prueba.descripcion" /></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        
                        <div t-if="ats.laboratorios_id">
                            <h3>Información del Laboratorio</h3>
                            <p><strong>Nombre del Laboratorio:</strong> <span t-field="ats.laboratorios_id.nombre" /></p>
                            <p><strong>Dirección del Laboratorio:</strong> <span t-field="ats.laboratorios_id.direccion" /></p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
