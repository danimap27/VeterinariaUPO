<odoo>
    <data>
        <template id="veterinariaupo_tipomedicina_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="tipomedicina">
                    <div class="page">
                        <style>
                            body {
                                font-family: 'Arial', sans-serif;
                                background-color: #f4f4f4;
                                color: #333;
                            }

                            h2 {
                                color: #007bff;
                            }

                            table {
                                width: 100%;
                                border-collapse: collapse;
                                margin-top: 20px;
                            }

                            table, th, td {
                                border: 1px solid #ddd;
                            }

                            th, td {
                                padding: 10px;
                                text-align: left;
                            }

                            th {
                                background-color: #007bff;
                                color: #fff;
                            }
                        </style>

                        <h2>Informe de Tipo Medicina</h2>
                        <table>
                            <tr>
                                <th>Nombre del Tipo de medicina:</th>
                                <td><span t-field="tipomedicina.nombre"/></td>
                            </tr>
                           
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
