<odoo>
    <template id="veterinariaupo_cliente_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="cliente">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure" />
                        <h2>Cliente Report</h2>
                        <p><strong>ID Cliente:</strong> <span t-field="cliente.carnet_id" /></p>
                        <p><strong>ID Card:</strong> <span t-field="cliente.dni" /></p>
                        <p><strong>Nombre:</strong> <span t-field="cliente.nombre" /></p>
                        <p><strong>Apellidos:</strong> <span t-field="cliente.apellidos" /></p>
                        <p><strong>Direcci√≥n:</strong> <span t-field="cliente.direccion" /></p>
                        <p><strong>Telefono:</strong> <span t-field="cliente.telefono" /></p>
                        <p><strong>Correo:</strong> <span t-field="cliente.correo" /></p>
        
                        <div t-if="cliente.mascotas_ids">
                            <h3>Mascotas</h3>
                            <table>
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Especie</th>
                                        <th>Raza</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="cliente.mascotas_ids" t-as="mascota">
                                        <tr>
                                            <td><span t-field="mascota.nombre" /></td>
                                            <td><span t-field="mascota.especie" /></td>
                                            <td><span t-field="mascota.raza" /></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
